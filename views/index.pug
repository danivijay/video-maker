doctype html
html(lang='en')
  head
    title video-maker
    script(type='text/javascript').
  body
    form(action='/', method="post", enctype='multipart/form-data')
      input(type='file', multiple='', name='images', value='Upload images')
      input(type='submit', name='submit', value='Create clip')
      if link
        span &nbsp;
        a(href=link) Download
        span &nbsp;
        a(href="/delete/"+projectId) Delete project
      else if err
        span #{err} 